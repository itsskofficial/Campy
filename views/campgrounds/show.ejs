<% layout('layouts/boilerplate') %> 
    <div id="show-container">
        <div id="show-campground-card">
            <img  id="show-campground-image" src="<%= campground.image %> ">
            <div id="show-campground-card-body">
                <h1 id="show-campground-name">
                    <%= campground.name %> 
                </h1>
                <h2 id="show-campground-location">
                    <%= campground.location %> 
                </h2>
                <h3 id="show-campground-price">
                    $ <%= campground.price %> 
                </h3>
                <p id="show-campground-description">
                    <%= campground.description %>
                </p>
                <a href="/campgrounds/<%= campground.id %>/edit ">
                    <button id="show-edit-campground-button">
                        Edit Campground
                    </button>
                </a>
                <form action="/campgrounds/<%= campground.id %>?_method=DELETE" method="POST">
                    <button id="show-delete-campground-button">
                        Delete Campground
                    </button>
                </form>
            </div>
            <div id="show-campground-review">
                <label id="review-rating-label" for="review-rating">
                    Rating
                </label>
                <input type="range" id="review-rating" name="review[rating]" min="1" max="5">
            </div>
            <div id="show-campground-review">
                <label for="review-body" id="review-body-label">
                    Write a review
                </label>
                <textarea rows="5" cols="10" name="review[body]" id="review-body">
                </textarea>
            </div>
            </div>
        </div>
    </div>