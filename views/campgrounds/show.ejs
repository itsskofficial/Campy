<% layout('layouts/boilerplate') %> 
    <div id="container">
        <div id="campground-card">
            <img  id="show-campground-image" src="<%= campground.image %> ">
            <div id="campground-card-body">
                <h1>
                    <%= campground.name %> 
                </h1>
                <h2>
                    <%= campground.location %> 
                </h2>
                <h3>
                    <%= campground.price %> 
                </h3>
                <p>
                    <%= campground.description %>
                </p>
                <a href="/campgrounds/<%= campground.id %>/edit ">
                    <button id="show-edit-campground-button">
                        Edit Campground
                    </button>
                </a>
                <form action="/campgrounds/<%= campground.id %>?_method=DELETE" method="POST">
                    <button id="show-delete-campground-button">
                        Delete Campground
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    
    
    
   
    <h3><a href="/campgrounds">Show all campgrounds</a></h3>
