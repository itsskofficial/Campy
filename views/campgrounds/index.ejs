<% layout('layouts/boilerplate') %> 
    <h1>
        All Campgrounds 
    </h1>
    <h2>
        <ul> 
            <% for (let campground of campgrounds){  %>
                <div id="campground-card" class="campground-card">
                    <div id="camground-img" class="campground-img">
                        <img src="<%= campground.image %> ">
                    </div>
                    <div id="campground-body" class="campground-body">
                        <h2 id="campground.name" class="campground.name">
                            <%= campground.name %> 
                        </h2>
                        <h3 id="campground-price" class="campground-price">
                            <%= campground.price %> 
                        </h3>
                        <p id="campground-description">
                            <%= campground.description %> 
                        </p>
                        <button></button>
                    </div>     

                    
                </div>
                <li><a href="campgrounds/<%= campground.id %> "><%= campground.name %></a></li>
                <% } %>  
        </ul>
    </h2>
    <h3><a href="/campgrounds/new">Make new campground</a></h3>