<% layout('layouts/boilerplate') %> 
    <div id="container" class="container">
        <h1>
            All Campgrounds 
        </h1>
        <div class="campgrounds" id="campgrounds">
            <% for (let campground of campgrounds){  %>
                <div id="campground-card" class="campground-card">
                    <div id="campground-img" class="campground-img">
                        <img src="<%= campground.image %> ">
                    </div>
                    <div id="campground-body" class="campground-body">
                        <h2 id="campground-name" class="campground-name">
                            <%= campground.name %> 
                        </h2>
                        <h3 id="campground-price" class="campground-price">
                            <%= campground.price %> 
                        </h3>
                        <p id="campground-description" class="campground-description">
                            <%= campground.description %> 
                        </p>
                        <a href="">
                            <button id="campground-button" class="campground-button">
                                View Campground
                            </button>
                        </a>
                    </div>     
                </div>
            <% } %> 
        </div>
    </div>